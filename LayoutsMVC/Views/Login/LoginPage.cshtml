@model LayoutsMVC.Models.LoginValidations
@{
    ViewBag.Title = "LoginPage";
}

<h2>LoginPage</h2>
@using(Html.BeginForm("Submit","Login"))
{
    <table>
        <tr>
            <td>Username</td>
            <td>@Html.TextBoxFor(a => a.Login)</td>
            <td>@Html.ValidationMessageFor(a => a.Login, "", new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td>Password</td>
            <td>@Html.TextBoxFor(a => a.Password)</td>
            <td>@Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })</td>
        <tr>
            <td><input type="submit" value="submit" /></td>
        </tr>
    </table>
}

